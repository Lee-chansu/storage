<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="/blog.css">
  
</head>
  
<section class="join sec text-center">
    <form action="/join" method="post" id="form">
      <div class="container">
        <h2 class="title">🤝 Resister</h2>
        <div class="row row-cols-1 wrap">
          <div class="col">
            <input type="text" name="username" id="user-name" placeholder="아이디">
          </div>
          <div class="col">
            <input type="password" name="password" id="user-pw" placeholder="비밀번호">
          </div>
          <div class="col">
            <p class="error"></p>
          </div>
          <div class="col">
            <button type="submit" class="btn btn-ok btn-success">확인</button>
          </div>
          <div class="col link login">
            <p><a href="/login" class="link-primary"> 로그인</a> 하러가기</p>
          </div>
        </div>
    </div>
  </form>
</section>

<script src="/js/main.js"></script>
<script>
  let isJoined = ('<%= isJoined.message %>')
  let joinWrap = document.querySelector('.join .wrap')
  
  if (isJoined =='success') {
    joinWrap.innerHTML = '<p class="joined">🎉가입되었습니다🎉</p><p>1.5초 뒤에 로그인 페이지로 이동합니다...</p>';
    setTimeout(()=>window.location.href="/login", 1500)
    
  } else if(isJoined =='fail') {
    errorMessage.textContent = '이미 가입된 회원이 있습니다';
  } else{
    errorMessage.textContent = '';
  }
</script>
</body>
</html>