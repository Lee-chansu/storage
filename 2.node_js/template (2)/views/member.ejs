<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
</head>
<body>
    <%-include('nav.ejs') %>
    <section class="sec member">
        <div class="container text-center">
            <table>
                <tr>
                    <th class="col">id</th>
                    <th class="col">name</th>
                    <th class="col">team</th>
                    <th class="col">position</th>
                    <th class="col">emailAdress</th>
                    <th class="col">phoneNumber</th>
                    <th class="col">admissionDate</th>
                    <th class="col">birthday</th>
                </tr>
                <% for(i of member) {%>
                <% let thisDate = new Date(i.birthday)%>
                <% let thisDate2 = new Date(i.admissionDate)%>
                <% let birthday = `${thisDate.getFullYear()}-${thisDate.getMonth()+1}-${thisDate.getDate()}` %>
                <% let admissionDate = `${thisDate2.getFullYear()}-${thisDate2.getMonth()+1}-${thisDate2.getDate()}` %>
                <tr>
                    <td><%= i.id %></td>
                    <td><a href="/member/<%= i.id %>"><%= i.name %></a></td>
                    <td><%= i.team %></td>
                    <td><%= i.position %></td>
                    <td><%= i.emailAddress %></td>
                    <td><%= i.phoneNumber %></td>
                    <td><%= admissionDate%></td>
                    <td><%= birthday %></td>
                </tr>
                <% } %>
            </table>
            <button onclick="location.href='insert'" type="button">정보추가</button>
        </div>
    </section>

    <script>
        

    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>