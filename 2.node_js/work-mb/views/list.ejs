  </head>
  <body>
    <%- include('nav.ejs') %>
    <sction class="sec">
      <div class="white-bg">
        <%= loginInfo.userId %>
        <h1>ê¸€ ëª©ë¡</h1>
        <% for(let i = 0; i < list.length; i++) { %>
        <div class="list-box">
          <a href="/detail/<%= list[i]._id %>">
            <h3><%= list[i].title %></h3>
            <p><%= list[i].content %></p>
          </a>
          <a href="/edit/<%= list[i]._id%>">âœï¸</a>
          <a
            class="delete"
            href="/delete/list[i]._id"
